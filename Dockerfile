# Dockerfile
# TNAP BOT â€” Cloud Run Production (FINAL)

FROM node:20-alpine

# -----------------------------------------------------
# Environment
# -----------------------------------------------------
ENV NODE_ENV=production
ENV PORT=8080

# -----------------------------------------------------
# App directory
# -----------------------------------------------------
WORKDIR /app

# -----------------------------------------------------
# Dependencies (cached layer)
# -----------------------------------------------------
COPY package.json package-lock.json ./
RUN npm ci --omit=dev

# -----------------------------------------------------
# App source
# -----------------------------------------------------
COPY . .

# -----------------------------------------------------
# Cloud Run networking
# -----------------------------------------------------
EXPOSE 8080

# -----------------------------------------------------
# Start application
# -----------------------------------------------------
CMD ["node", "src/index.js"]

