{
  "displayName": "TNAP — Enterprise Operations Dashboard",
  "gridLayout": {
    "columns": 12,
    "widgets": [

      {
        "title": "Cloud Run — Request Count",
        "xyChart": {
          "dataSets": [
            {
              "timeSeriesQuery": {
                "timeSeriesFilter": {
                  "filter": "metric.type=\"run.googleapis.com/request_count\" resource.type=\"cloud_run_revision\" resource.label.\"service_name\"=\"tnap-bot\"",
                  "aggregation": {
                    "alignmentPeriod": "60s",
                    "perSeriesAligner": "ALIGN_RATE"
                  }
                }
              },
              "plotType": "LINE"
            }
          ]
        },
        "width": 6,
        "height": 3
      },

      {
        "title": "Cloud Run — Errors (5xx)",
        "xyChart": {
          "dataSets": [
            {
              "timeSeriesQuery": {
                "timeSeriesFilter": {
                  "filter": "metric.type=\"run.googleapis.com/request_count\" resource.type=\"cloud_run_revision\" metric.label.response_code>=\"500\" resource.label.\"service_name\"=\"tnap-bot\"",
                  "aggregation": {
                    "alignmentPeriod": "60s",
                    "perSeriesAligner": "ALIGN_RATE"
                  }
                }
              },
              "plotType": "LINE"
            }
          ]
        },
        "width": 6,
        "height": 3
      },

      {
        "title": "Telegram Incoming Webhooks (EVENT: incoming)",
        "xyChart": {
          "dataSets": [
            {
              "timeSeriesQuery": {
                "timeSeriesFilter": {
                  "filter": "metric.type=\"logging.googleapis.com/user/event\" metric.label.type=\"INCOMING\" metric.label.source=\"telegram\""
                }
              },
              "plotType": "LINE"
            }
          ]
        },
        "width": 6,
        "height": 3
      },

      {
        "title": "Telegram Outgoing Messages (EVENT: outgoing)",
        "xyChart": {
          "dataSets": [
            {
              "timeSeriesQuery": {
                "timeSeriesFilter": {
                  "filter": "metric.type=\"logging.googleapis.com/user/event\" metric.label.type=\"OUTGOING\""
                }
              },
              "plotType": "STACKED_AREA"
            }
          ]
        },
        "width": 6,
        "height": 3
      },

      {
        "title": "Dispatch Success Rate",
        "xyChart": {
          "dataSets": [
            {
              "timeSeriesQuery": {
                "timeSeriesFilter": {
                  "filter": "metric.type=\"logging.googleapis.com/user/metric\" metric.label.metric_name=\"jobs_dispatched\""
                },
                "plotType": "LINE"
              }
            }
          ]
        },
        "width": 6,
        "height": 3
      },

      {
        "title": "StreetView Errors (metrics: streetview_errors)",
        "xyChart": {
          "dataSets": [
            {
              "timeSeriesQuery": {
                "timeSeriesFilter": {
                  "filter": "metric.type=\"logging.googleapis.com/user/metric\" metric.label.metric_name=\"streetview_errors\""
                }
              },
              "plotType": "STACKED_BAR"
            }
          ]
        },
        "width": 6,
        "height": 3
      },

      {
        "title": "Technician Assignments (EVENT: assign_tech)",
        "xyChart": {
          "dataSets": [
            {
              "timeSeriesQuery": {
                "timeSeriesFilter": {
                  "filter": "metric.type=\"logging.googleapis.com/user/event\" metric.label.event_name=\"tech_assigned\""
                }
              },
              "plotType": "LINE"
            }
          ]
        },
        "width": 6,
        "height": 3
      },

      {
        "title": "Jobs Completed vs Not Completed",
        "xyChart": {
          "dataSets": [
            {
              "timeSeriesQuery": {
                "timeSeriesFilter": {
                  "filter": "metric.type=\"logging.googleapis.com/user/event\" metric.label.event_name=\"job_completed\""
                }
              }
            },
            {
              "timeSeriesQuery": {
                "timeSeriesFilter": {
                  "filter": "metric.type=\"logging.googleapis.com/user/event\" metric.label.event_name=\"job_not_completed\""
                }
              }
            }
          ]
        },
        "width": 12,
        "height": 3
      },

      {
        "title": "Bot Processing Latency (TIMING logs)",
        "xyChart": {
          "dataSets": [
            {
              "timeSeriesQuery": {
                "timeSeriesFilter": {
                  "filter": "metric.type=\"logging.googleapis.com/user/timing\" metric.label.label=\"dispatchJobToTelegram\""
                }
              }
            }
          ]
        },
        "width": 12,
        "height": 3
      },

      {
        "title": "Security Alerts",
        "xyChart": {
          "dataSets": [
            {
              "timeSeriesQuery": {
                "timeSeriesFilter": {
                  "filter": "metric.type=\"logging.googleapis.com/user/security\""
                }
              }
            }
          ]
        },
        "width": 12,
        "height": 3
      }

    ]
  }
}

